<T3DataStructure>
  <sheets>
   
    <!--##########################-->
    <!-- Tab for general settings -->
    <!--##########################-->
    <sDefault>
      <ROOT>
        <TCEforms>
          <sheetTitle>General Options</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>  
                    
          <switchableControllerActions>
            <TCEforms>
              <label>Plugin type</label>
              <config>
                <type>select</type>
                <items type="array">
                  <numIndex index="1" type="array">
                    <numIndex index="0">Gallery List</numIndex>
                    <numIndex index="1">Gallery->list;Gallery->index;ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show;Error->index</numIndex>
                  </numIndex>
                  <numIndex index="2" type="array">
                    <numIndex index="0">Specific Gallery</numIndex>
                    <numIndex index="1">Gallery->showSingle;Gallery->index;ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show;Error->index</numIndex>
                  </numIndex>
                  <numIndex index="3" type="array">
                    <numIndex index="0">Specific Album</numIndex>
                    <numIndex index="1">Album->showSingle;Album->show;ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show;DirectoryImport->showImportForm;DirectoryImport->importFromDirectory;ZipImport->showImportForm;ZipImport->importFromZip;Development->createSampleData;Development->deleteAll;Remote->addItemToAlbum;Remote->albumList;Remote->testConnection;Remote->galleryList;Development->testExif;Feeds->rss;Ajax->directoryAutoComplete;Error->index</numIndex>
                  </numIndex>
                  <numIndex index="4" type="array">
                    <numIndex index="0">Specific Image</numIndex>
                    <numIndex index="1">Item->showSingle;Error->index</numIndex>
                  </numIndex>
                  <numIndex index="5" type="array">
                    <numIndex index="0">ImageList</numIndex>
                    <numIndex index="1">ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show;Error->index</numIndex>
                  </numIndex>
                </items>
              </config>
            </TCEforms>
          </switchableControllerActions>

		
		  <settings.theme>
            <TCEforms>
              <label>Theme</label>
              <config>
                <type>select</type>
				<default>default</default>
				<itemsProcFunc>user_Tx_Yag_Utility_Flexform_TyposcriptDataProvider->getDefinedThemes</itemsProcFunc>
              </config>
            </TCEforms>
          </settings.theme>
	
			
          <settings.contextIdentifier>
            <TCEforms>
              <label>Context Identifier</label>
              <config>
                <type>input</type>
                <size>30</size>
                <eval>string</eval>
                <default></default>
              </config>
            </TCEforms>
          </settings.contextIdentifier>

        </el>
      </ROOT>
    </sDefault>
    
    
    <!--##########################-->
    <!-- Tab for gallery settings -->
    <!--##########################-->
      <gallery>
      <ROOT>
        <TCEforms>
          <sheetTitle>Gallery</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.context.selectedGalleryUid>
			<TCEforms>
				<label>LLL:EXT:yag/Resources/Private/Language/locallang.xml:tx_yag_flexform_gallery.selectGallery</label>
				<config>
					<type>select</type>
					<form_type>user</form_type>
					<userFunc>user_Tx_Yag_Utility_Flexform_RecordSelector->renderGallerySelector</userFunc>
				</config>
			</TCEforms>
		</settings.context.selectedGalleryUid>
          
        </el>
      </ROOT>
    </gallery>
    
    
    
    <!--##########################-->
    <!-- Tab for album settings   -->
    <!--##########################-->
    <album>
      <ROOT>
        <TCEforms>
          <sheetTitle>Album</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.context.selectedAlbumUid>
			<TCEforms>
				<label>LLL:EXT:yag/Resources/Private/Language/locallang.xml:tx_yag_flexform_gallery.selectAlbum</label>
				<config>
					<type>select</type>
					<form_type>user</form_type>
					<userFunc>user_Tx_Yag_Utility_Flexform_RecordSelector->renderAlbumSelector</userFunc>
				</config>
			</TCEforms>
		</settings.context.selectedAlbumUid>
          
        <settings.album.sorting>
          <TCEforms>
            <label>Sort by</label>
            <config>
              <type>select</type>
              	<items>
				<numIndex index="0" type="array">
					<numIndex index="0">Filename</numIndex>
					<numIndex index="1">filename</numIndex>
				</numIndex>
				<numIndex index="1" type="array">
					<numIndex index="0">Title</numIndex>
					<numIndex index="1">title</numIndex>
				</numIndex>
				<numIndex index="2" type="array">
					<numIndex index="0">Description</numIndex>
					<numIndex index="1">description</numIndex>
				</numIndex>						
				<numIndex index="3" type="array">
					<numIndex index="0">Capture date</numIndex>
					<numIndex index="1">capturedate</numIndex>
				</numIndex>																			
			</items>
			<default></default>
            </config>
          </TCEforms>
        </settings.album.sorting>
          
        </el>
      </ROOT>
    </album>


	<!--##########################-->
    <!-- Tab for image settings   -->
    <!--##########################-->
      <image>
      <ROOT>
        <TCEforms>
          <sheetTitle>Image</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.context.selectedItemUid>
			<TCEforms>
				<label>LLL:EXT:yag/Resources/Private/Language/locallang.xml:tx_yag_flexform_gallery.selectImage</label>
				<config>
					<type>select</type>
					<form_type>user</form_type>
					<userFunc>user_Tx_Yag_Utility_Flexform_RecordSelector->renderImageSelector</userFunc>
				</config>
			</TCEforms>
		</settings.context.selectedItemUid>
          
        </el>
      </ROOT>
    </image>
 </sheets>
</T3DataStructure>
