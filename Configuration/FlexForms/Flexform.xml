<T3DataStructure>
  <sheets>
   
    <!--##########################-->
    <!-- Tab for general settings -->
    <!--##########################-->
    <sDefault>
      <ROOT>
        <TCEforms>
          <sheetTitle>General Options</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>  
          
          <switchableControllerActions>
            <TCEforms>
              <label>Plugin type</label>
              <config>
                <type>select</type>
                <items type="array">
                  <numIndex index="1" type="array">
                    <numIndex index="0">Gallery List</numIndex>
                    <numIndex index="1">Gallery->index;ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show</numIndex>
                  </numIndex>
                  <numIndex index="2" type="array">
                    <numIndex index="0">Specific Gallery</numIndex>
                    <numIndex index="1">Gallery->list;Gallery->index;ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show</numIndex>
                  </numIndex>
                  <numIndex index="3" type="array">
                    <numIndex index="0">Specific Album</numIndex>
                    <numIndex index="1">Album->show;DirectoryImport->showImportForm;DirectoryImport->importFromDirectory;ZipImport->showImportForm;ZipImport->importFromZip;Development->createSampleData;Development->deleteAll;Remote->addItemToAlbum;Remote->albumList;Remote->testConnection;Remote->galleryList;ItemList->submitFilter;ItemList->resetFilter;Item->show;Development->testExif;Feeds->rss;Ajax->directoryAutoComplete</numIndex>
                  </numIndex>
                  <numIndex index="4" type="array">
                    <numIndex index="0">Specific Image</numIndex>
                    <numIndex index="1">Item->show</numIndex>
                  </numIndex>
                  <numIndex index="5" type="array">
                    <numIndex index="0">ImageList</numIndex>
                    <numIndex index="1">ItemList->list;ItemList->submitFilter;ItemList->resetFilter;Item->show</numIndex>
                  </numIndex>
                </items>
              </config>
            </TCEforms>
          </switchableControllerActions>


        </el>
      </ROOT>
    </sDefault>
    
    
    <!--##########################-->
    <!-- Tab for gallery settings -->
    <!--##########################-->
      <gallery>
      <ROOT>
        <TCEforms>
          <sheetTitle>Gallery</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.gallery.selectedGalleryUid>
			<TCEforms>
				<label>LLL:EXT:yag/Resources/Private/Language/locallang_flexform.xml:tx_yag_flexform_gallery.selectGallery</label>
				<config>
					<type>select</type>
					<form_type>user</form_type>
					<userFunc>user_Tx_Yag_Utility_Flexform_RecordSelector->renderGallerySelector</userFunc>
				</config>
			</TCEforms>
		</settings.gallery.selectedGalleryUid>
          
        </el>
      </ROOT>
    </gallery>
    
    
    
    <!--##########################-->
    <!-- Tab for album settings   -->
    <!--##########################-->
    <album>
      <ROOT>
        <TCEforms>
          <sheetTitle>Album</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.album.selectedAlbumUid>
			<TCEforms>
				<label>LLL:EXT:yag/Resources/Private/Language/locallang_flexform.xml:tx_yag_flexform_gallery.selectAlbum</label>
				<config>
					<type>select</type>
					<form_type>user</form_type>
					<userFunc>user_Tx_Yag_Utility_Flexform_RecordSelector->renderAlbumSelector</userFunc>
				</config>
			</TCEforms>
		</settings.album.selectedAlbumUid>
          
        <settings.album.sorting>
          <TCEforms>
            <label>Sort by</label>
            <config>
              <type>select</type>
              	<items>
				<numIndex index="0" type="array">
					<numIndex index="0">Filename</numIndex>
					<numIndex index="1">filename</numIndex>
				</numIndex>
				<numIndex index="1" type="array">
					<numIndex index="0">Title</numIndex>
					<numIndex index="1">title</numIndex>
				</numIndex>
				<numIndex index="2" type="array">
					<numIndex index="0">Description</numIndex>
					<numIndex index="1">description</numIndex>
				</numIndex>						
				<numIndex index="3" type="array">
					<numIndex index="0">Capture date</numIndex>
					<numIndex index="1">capturedate</numIndex>
				</numIndex>																			
			</items>
			<default></default>
            </config>
          </TCEforms>
        </settings.album.sorting>
          
        </el>
      </ROOT>
    </album>


	<!--##########################-->
    <!-- Tab for image settings   -->
    <!--##########################-->
      <image>
      <ROOT>
        <TCEforms>
          <sheetTitle>Image</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
          <settings.itemList.selectedItemUid>
			<TCEforms>
				<label>Image</label>
				<config>
					<type>select</type>
					<treeView>1</treeView>
					<foreign_table>tx_yag_domain_model_gallery</foreign_table>
					<foreign_field>name</foreign_field>
					<foreign_table_where></foreign_table_where>
					<maxitems>1</maxitems>
				</config>
			</TCEforms>
		</settings.itemList.selectedItemUid>
          
        </el>
      </ROOT>
    </image>


	<!--############################################-->
    <!-- Tab for user defined imageLists settings   -->
    <!--############################################-->
      <imageList>
      <ROOT>
        <TCEforms>
          <sheetTitle>Image list</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
     
         
          
        </el>
      </ROOT>
    </imageList>


  </sheets>
</T3DataStructure>
